<Window x:Class="ImageSim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageSim"
        xmlns:vm="clr-namespace:ImageSim.ViewModels"
        xmlns:conv="clr-namespace:ImageSim.Converters"
        mc:Ignorable="d"
        Title="{Binding WorkingFolder, TargetNullValue='Working folder is empty'}" Height="450" Width="800"
        DataContext="{Binding Source={StaticResource Locator}, Path=MainVM}">
    <Window.Resources>
        <conv:BitmapFrameConverter x:Key="frameConv"/>
        <BooleanToVisibilityConverter x:Key="boolToVis"/>
        <conv:IntOffsetConverter x:Key="offsetConv"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="Files">
                <MenuItem Header="Set working folder" Command="{Binding SetWorkingFolderCommand}"/>
                <MenuItem Header="Reload files" Command="{Binding ReloadFilesCommand}" 
                          IsEnabled="{Binding IsFileSearchInProgress, Converter={conv:InverseBooleanConverter}}"/>
                <MenuItem Header="Cancel search" Command="{Binding CancelFileSearchCommand}" 
                          IsEnabled="{Binding IsFileSearchInProgress}"/>
            </MenuItem>

            <MenuItem Header="Tools">
                <MenuItem Header="Find same files by hash" Command="{Binding CompareHashesCommand}"/>
                <MenuItem Header="Clear cache" Command="{Binding ClearCacheCommand}"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2.5*"/>
            </Grid.ColumnDefinitions>

            <ListBox ItemsSource="{Binding LocatedFiles}" IsSynchronizedWithCurrentItem="True" 
                     SelectedItem="{Binding SelectedFile, Mode=OneWayToSource}">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:ImageFileVM}">
                        <TextBlock Text="{Binding FilePath}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <GridSplitter Grid.Column="1" Width="3" HorizontalAlignment="Center" 
                    VerticalAlignment="Stretch" Background="{x:Static SystemColors.ActiveBorderBrush}"/>
            <TabControl Grid.Column="2" TabStripPlacement="Top" ItemsSource="{Binding Tabs}" SelectedIndex="1">
                <TabControl.Resources>
                    <DataTemplate DataType="{x:Type vm:ImageDetailsVM}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="{Binding FilePath, StringFormat='Path: {0}'}"/>
                            <TextBlock Grid.Row="1" Text="{Binding Hash, StringFormat='Hash: {0}'}"/>
                            <TextBlock Grid.Row="2">
                                <Run Text="Size: "/>
                                <Run Text="{Binding Width}"/>
                                <Run Text="x"/>
                                <Run Text="{Binding Height}"/>
                            </TextBlock>
                            <Image x:Name="image" Grid.Row="3" Source="{Binding FilePath, Converter={StaticResource frameConv}}" Stretch="Uniform"/>
                            <Border x:Name="error" Grid.Row="3" Margin="10" BorderBrush="Red" BorderThickness="2" Visibility="Collapsed">
                                <TextBlock Text="Can't create preview" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>

                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsValid}" Value="False">
                                <Setter TargetName="image" Property="Source" Value="{x:Null}"/>
                                <Setter TargetName="image" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="error" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type vm:ConflictCollectionVM}">
                        <Grid>
                            <Grid.InputBindings>
                                <KeyBinding Key="Left" Command="{Binding PreviousConflictCommand}"/>
                                <KeyBinding Key="Right" Command="{Binding NextConflictCommand}"/>
                            </Grid.InputBindings>
                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ContentControl Content="{Binding CurrentConflict}">
                                <ContentControl.Resources>
                                    <DataTemplate DataType="{x:Type vm:ImageGroupVM}">
                                        <Grid>
                                            <Grid.InputBindings>
                                                <KeyBinding Key="Delete" Command="{Binding Files/DeleteCommand}"/>
                                            </Grid.InputBindings>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>
                                            <ListBox ItemsSource="{Binding Files}" IsSynchronizedWithCurrentItem="True">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding FilePath}" ToolTip="{Binding FilePath}">
                                                            <TextBlock.ContextMenu>
                                                                <ContextMenu>
                                                                    <MenuItem Header="Delete" Command="{Binding DeleteCommand}"/>
                                                                </ContextMenu>
                                                            </TextBlock.ContextMenu>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                            <Image Grid.Column="1" Source="{Binding Files/FilePath, 
                                                Converter={StaticResource frameConv}}" Stretch="Uniform"/>
                                        </Grid>
                                    </DataTemplate>
                                </ContentControl.Resources>
                            </ContentControl>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Content="Back" Command="{Binding PreviousConflictCommand}"/>
                                <TextBlock Grid.Column="1" Margin="10,0,10,0">
                                    <Run Text="Conflict "/>
                                    <Run Text="{Binding CurrentIndex, Mode=OneWay, Converter={StaticResource offsetConv}, ConverterParameter=1}"/>
                                    <Run Text=" of "/>
                                    <Run Text="{Binding Conflicts.Count, Mode=OneWay}"/>
                                </TextBlock>
                                <Button Grid.Column="2" Content="Next" Command="{Binding NextConflictCommand}"/>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </TabControl.Resources>

                <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem">
                        <Setter Property="Header" Value="{Binding}"/>
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <DataTemplate DataType="{x:Type vm:TabVM}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Header}" Margin="4"/>
                                        <Button Grid.Column="1" Content="X" Width="20" Height="20"
                                                Command="{Binding CloseTabCommand}" 
                                                Visibility="{Binding CanCloseTab, Converter={StaticResource boolToVis}}"/>
                                    </Grid>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Content" Value="{Binding ContentVM}"/>
                    </Style>
                </TabControl.ItemContainerStyle>
            </TabControl>
        </Grid>

        <StatusBar Grid.Row="2">
            <TextBlock Text="{Binding LocatedFiles.Count, StringFormat='Files: {0}'}"/>
        </StatusBar>
    </Grid>
</Window>
